{
  "name": "@marianmeres/widget-provider",
  "version": "1.1.3",
  "exports": "./src/mod.ts",
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "deno.ns"
    ]
  },
  "tasks": {
    "test": "deno test",
    "test:watch": "deno test --watch",
    "npm:build": "deno run -A scripts/build-npm.ts",
    "npm:publish": "deno run -A scripts/build-npm.ts && cd ./.npm-dist && npm publish --access=public",
    "example:build": "deno run -A jsr:@marianmeres/deno-build --strict --root src --entry mod.ts --outdir example --outfile dist.js",
    "example:watch": "deno task example:build --watch-dir ./src --watch",
    "release": "deno run -A jsr:@marianmeres/deno-release",
    "publish": "deno publish && deno task npm:publish",
    "rp": "deno task release -y && deno task publish",
    "rpm": "deno task release minor -y && deno task publish"
  },
  "imports": {
    "@marianmeres/clog": "jsr:@marianmeres/clog@^3",
    "@marianmeres/pubsub": "jsr:@marianmeres/pubsub@^2",
    "@marianmeres/store": "jsr:@marianmeres/store@^2",
    "@marianmeres/npmbuild": "jsr:@marianmeres/npmbuild@^1.11.0",
    "@std/assert": "jsr:@std/assert@^1.0.18",
    "@std/fs": "jsr:@std/fs@^1.0.22",
    "@std/path": "jsr:@std/path@^1.1.4"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 90,
    "indentWidth": 4,
    "proseWrap": "preserve"
  }
}
